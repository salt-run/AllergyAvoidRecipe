<!DOCTYPE html>
<html>
  <head>
    <title>AllergyAvoidRecipe</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="cont">
      <header>
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
                <span class="sr-only">salt Blog</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <!-- <span class="icon-bar"></span>
                <span class="icon-bar"></span> -->
              </button>
              <!-- <a class="navbar-brand" href="<%#= root_path %>">Tops</a> -->
            </div>
            <div id="gnavi" class="collapse navbar-collapse">
              <ul class="nav navbar-nav">
                <!--
                <div class="top_log_image">
                  <li><a href="<%= root_path %>"><img src="<%= asset_path('logo.png') %>"></a></li>
                </div>
              -->
                <li><a href="<%= root_path %>"><button class="btn navbar-btn"><span class="glyphicon glyphicon-home"></span>AARecipe</button></a></li>
                <% if logged_in? %>
                <li>
                  <br>
                  <%= form_tag recipes_path, method: 'get' do %>
                    <%= text_field_tag :search, params[:search], name: "search", :placeholder=>"メニューを検索", size: 30;%>
                    <%= submit_tag "Search", name: nil %>
                  <% end %>
                </li>
                  <li><a href="<%= new_recipe_path %>"><button class="btn btn-success navbar-btn"><span class="glyphicon glyphicon-pencil"></span>レシピ作成</button></a></li>
                  <li><a href="<%= recipes_path(ranking_recipe: true) %>"><button class="btn btn-info navbar-btn"><span class="glyphicon glyphicon-star-empty"></span>人気レシピ(100)</button></a></li>
                  <li><a href="<%= user_path(current_user.id) %>"><button class="btn btn-info navbar-btn"><span class="glyphicon glyphicon-file"></span>マイページ</button></a></li>
                  <li><a href="<%= session_path(current_user.id) %>" data-method="delete" rel="nofollow" data-confirm="Are you sure?"><button class="btn btn-danger navbar-btn"><span class="glyphicon glyphicon-log-out"></span>ログアウト</button></a></li>
                <% else %>
                  <li><a href="<%= new_user_path %>"><button class="btn btn-info navbar-btn"><span class="glyphicon glyphicon-user"></span>sign up</button></a></li>
                  <li><a href="<%= new_session_path %>"><button class="btn btn-info navbar-btn"><span class="glyphicon glyphicon-log-in"></span>ログイン</button></a></li>
                <% end %>

              </ul>
            </div>
          </div>
        </nav>
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>
      </header>

      <%= yield %>
      <div class="wrapper">
      </div>
      <footer class="footer">
        <p>Copyright (C) 2016-2017 Salt. All Rights Reserved.</p>
      </footer>
　  </div>
　</body>
</html>
